{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src/__generated__",
    "src/swagger.json",
    "src/migrations",
    "src/tests",
    "src/**/*.spec.ts",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": ["src/"],
  "ext": "js,json,ts,graphql",
  "delay": "1500"
}
